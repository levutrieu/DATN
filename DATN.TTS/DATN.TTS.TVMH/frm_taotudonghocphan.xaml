<Window x:Class="DATN.TTS.TVMH.frm_taotudonghocphan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        Title="Tạo học phần" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border x:Name="BrdBtnWrap" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="1" BorderBrush="SlateGray" Margin=" 0 0 0 5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,1,0,1">
                <Button Content="Tạo lớp" Style="{StaticResource Button_Style}" HorizontalAlignment="Right" Name="btnsave" VerticalAlignment="Center" Click="Btnsave_OnClick"/>
                <Button Content="Hủy" Style="{StaticResource Button_Style}" HorizontalAlignment="Right" Name="btncancel" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderThickness="1" BorderBrush="SlateGray" Background="Lavender" Margin="0 0 0 10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên môn học" VerticalAlignment="Center"/>
                <dxe:TextEdit Grid.Row="0" Grid.Column="1" Style="{StaticResource TextEditStyle}" IsReadOnly="True" EditValue="{Binding TEN_MONHOC}"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Ngành" VerticalAlignment="Center"/>
                <dxe:TextEdit Grid.Row="0" Grid.Column="3" Style="{StaticResource TextEditStyle}" IsReadOnly="True" EditValue="{Binding TEN_NGANH}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Hệ đào tạo" VerticalAlignment="Center"/>
                <dxe:TextEdit Grid.Row="1" Grid.Column="1" Style="{StaticResource TextEditStyle}" IsReadOnly="True" EditValue="{Binding TEN_HEDAOTAO}"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Kiểu học" VerticalAlignment="Center"/>
                <dxe:TextEdit Grid.Row="1" Grid.Column="3" Style="{StaticResource TextEditStyle}" IsReadOnly="True"  EditValue="{Binding KIEU_HOC_CHU}"/>

            </Grid>
        </Border>

        <GroupBox Grid.Row="2" Header="Thông tin học phần" BorderBrush="SlateGray" Background="Lavender" Margin="0 0 0 10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Số tín chỉ" VerticalAlignment="Center"/>
                <dxe:TextEdit Grid.Row="0" Grid.Column="1" Style="{StaticResource TextEditStyle}" IsReadOnly="True" EditValue="{Binding SO_TC}"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Tuần bắt đầu" VerticalAlignment="Center"/>
                <dxe:SpinEdit Grid.Row="0" Grid.Column="3" Style="{StaticResource SpinEditStyle}" Text="{Binding TUAN_BD}" Mask="d" MinValue="0"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Tuần kết thúc" VerticalAlignment="Center"/>
                <dxe:SpinEdit Grid.Row="0" Grid.Column="5" Style="{StaticResource SpinEditStyle}" Text="{Binding TUAN_KT}" Mask="d" MinValue="0"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Số tiết" VerticalAlignment="Center"/>
                <dxe:SpinEdit Grid.Row="1" Grid.Column="1" Style="{StaticResource SpinEditStyle}" Text="{Binding SOTIET}" Mask="d" MinValue="0"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Số sinh viên" VerticalAlignment="Center"/>
                <dxe:SpinEdit Grid.Row="1" Grid.Column="3" Style="{StaticResource SpinEditStyle}" Text="{Binding SOLUONG}" Mask="d" MinValue="0"/>
                <TextBlock Grid.Row="1" Grid.Column="4" Text="Cách tính điểm" VerticalAlignment="Center"/>
                <dxe:ComboBoxEdit Grid.Row="1" Grid.Column="5" Style="{StaticResource ComboBoxEditStyle}" Name="cboCanhtinh" EditValue="{Binding CACH_TINHDIEM, UpdateSourceTrigger=PropertyChanged}" DisplayMember="CACHTINH_NAME" ValueMember="CACHTINH"/>

            </Grid>
        </GroupBox>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Header="Định dạng mã lớp học phần" BorderBrush="SlateGray" Background="Lavender">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="rdbMaMon" Grid.Column="0" Grid.Row="0" Content="Mã môn học" VerticalAlignment="Center" IsChecked="{Binding IS_MA_TD, Mode=TwoWay}"/>
                    <RadioButton x:Name="rdbTenMon" Grid.Column="0" Grid.Row="1" Content="Nhập mã" VerticalAlignment="Center" IsChecked="{Binding IS_MA, Mode=TwoWay}"/>
                    <TextBlock  x:Name="rdbTenMon1" Grid.Column="1" Grid.Row="0" Text="+ học kỳ + năm học"  VerticalAlignment="Center"/>
                    <dxe:TextEdit Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding MA_HP}" Style="{StaticResource TextEditStyle}"/>


                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Định dạng tên lớp học phần" BorderBrush="SlateGray" Background="Lavender">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="rdbddTenMon" Grid.Column="0" Grid.Row="0" Content="Tên môn học" VerticalAlignment="Center" IsChecked="{Binding IS_TEN_TD, Mode=TwoWay}"/>
                    <RadioButton Grid.Column="0" Grid.Row="1" Content="Nhập tên" VerticalAlignment="Center" IsChecked="{Binding IS_TEN, Mode=TwoWay}"/>
                    <TextBlock  x:Name="txt1" Grid.Column="1" Grid.Row="0" Text=" + học kỳ + năm học +"  VerticalAlignment="Center"/>
                    <dxe:TextEdit Grid.Column="2" Grid.Row="0" Text="{Binding TEN_THEM}" Style="{StaticResource TextEditStyle}"/>
                    <dxe:TextEdit Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding TEN_HP}" Style="{StaticResource TextEditStyle}"/>

                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
